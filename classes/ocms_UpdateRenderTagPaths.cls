global class ocms_UpdateRenderTagPaths implements Database.Batchable<sObject> {
	String siteName;
	String contentType;
	Map<String, String> langToIdMap = new Map<String, String>();
	Map<String, String> idToLangMap = new Map<String, String>();
	String siteDefaultLanguage;

	Set<String> taxonomyRoots = new Set<String>();

	static String attributeContentRecordTypeId;

	static {
		attributeContentRecordTypeId = Schema.SObjectType.cms__Attribute__c.getRecordTypeInfosByName().get('Content').getRecordTypeId();
	}

	global ocms_UpdateRenderTagPaths(String siteName, String contentType) {
		this.siteName = siteName;
		this.contentType = contentType;

		for (cms__Language__c l : [SELECT Id, cms__Language_Code__c FROM cms__Language__c WHERE cms__Sites__r.cms__Site_Name__c = :siteName]) {
			this.langToIdMap.put(l.cms__Language_Code__c, l.Id);
			this.idToLangMap.put(l.Id, l.cms__Language_Code__c);
		}

		cms__Sites__c s = [SELECT Id, cms__Site_Name__c, cms__Default_Language__c FROM cms__Sites__c WHERE cms__Site_Name__c = :this.siteName];
		this.siteDefaultLanguage = (s.cms__Default_Language__c == null ? 'en_US' : s.cms__Default_Language__c);

		for(cms__Content_Template_Relationship__c ctr : [SELECT Id, cms__Content_Layout__r.cms__Taxonomies__c FROM cms__Content_Template_Relationship__c WHERE cms__Content_Type__r.cms__Name__c = :contentType]) {
			if(ctr.cms__Content_Layout__r.cms__Taxonomies__c != null) {
				taxonomyRoots.addAll(ctr.cms__Content_Layout__r.cms__Taxonomies__c.split(';'));
			}
		}

		System.debug(taxonomyRoots);
	}

	global Database.QueryLocator start(Database.BatchableContext BC) {
		Set<String> attributeNames = new Set<String> {'tagPathId', 'renderTagPath'};
		String query = 'SELECT Id, cms__Available_Languages__c, ' +
				'(SELECT Id, cms__Tag_Definition__c, cms__Is_Visible__c, cms__Ancestor__c, cms__Ancestor1__c, cms__Ancestor2__c, cms__Ancestor3__c, cms__Ancestor4__c, cms__Ancestor5__c, cms__Ancestor6__c FROM cms__Tags__r WHERE cms__Taxonomy__c IN :taxonomyRoots), ' +
				'(SELECT Id, cms__Language__c, cms__Simple_Name__c, cms__Name__c, cms__Simple_Value__c, cms__Value__c FROM cms__Attributes__r WHERE cms__Simple_Name__c IN :attributeNames) FROM cms__Content__c ' +
				'WHERE cms__Content_Type__r.cms__Name__c=:contentType';
		return Database.getQueryLocator(query);
	}

	global void execute(Database.BatchableContext BC, List<sObject> scope) {
		cms__Attribute__c[] attributesToDelete = new List<cms__Attribute__c>();
		cms__Attribute__c[] attributesToInsert = new List<cms__Attribute__c>();

		// Map<Tag Definition ID, Map<Language Code, Translated Name>>
		Map<String, Map<String, String>> tagDefinitionToName = new Map<String, Map<String, String>>();

		for(cms__Content__c content : (List<cms__Content__c>)scope) {
			// Delete all existing attributes - we'll just regenerate them
			attributesToDelete.addAll(content.cms__Attributes__r);

			// Pick out all Tag Definition IDs
			for(cms__Tag__c tag : content.cms__Tags__r) {
				tagDefinitionToName.put(tag.cms__Tag_Definition__c, new Map<String, String>());

				// If this is a visible tag, we can create the tagPathId attribute
				if(tag.cms__Is_Visible__c) {
					attributesToInsert.add(new cms__Attribute__c(
						cms__Simple_Name__c = 'tagPathId',
						cms__Name__c = 'tagPathId',
						cms__Simple_Value__c = tag.cms__Tag_Definition__c,
						cms__Value__c = tag.cms__Tag_Definition__c,
						cms__Index_Key__c = content.Id,
						cms__Is_Simple__c = true,
						cms__Content__c = content.Id,
						RecordTypeId = attributeContentRecordTypeId
					));
				}
			}
		}

		// Get translations for all tag definitions
		for(cms__Attribute__c taxonomyTranslation : [SELECT Id, cms__Meta_Content_Name__c, cms__Language__c, cms__Content__r.cms__Tag_Definition__c FROM cms__Attribute__c WHERE cms__Content__r.cms__Tag_Definition__c in :tagDefinitionToName.keySet() AND RecordType.Name='Taxonomy Item']) {
			tagDefinitionToName.get(taxonomyTranslation.cms__Content__r.cms__Tag_Definition__c)
			  .put(idToLangMap.get(taxonomyTranslation.cms__Language__c), taxonomyTranslation.cms__Meta_Content_Name__c);
		}

		// Build translated tag paths
		for(cms__Content__c content : (List<cms__Content__c>)scope) {
			for(cms__Tag__c tag : content.cms__Tags__r) {
				if(!tag.cms__Is_Visible__c) continue;

				for(String language : content.cms__Available_Languages__c.split(';')) {
					String path = '';

					if(tag.cms__Ancestor__c != null) path += '/' + tagDefinitionToName.get(tag.cms__Ancestor__c).get(language);
					if(tag.cms__Ancestor1__c != null) path += '/' + tagDefinitionToName.get(tag.cms__Ancestor1__c).get(language);
					if(tag.cms__Ancestor2__c != null) path += '/' + tagDefinitionToName.get(tag.cms__Ancestor2__c).get(language);
					if(tag.cms__Ancestor3__c != null) path += '/' + tagDefinitionToName.get(tag.cms__Ancestor3__c).get(language);
					if(tag.cms__Ancestor4__c != null) path += '/' + tagDefinitionToName.get(tag.cms__Ancestor4__c).get(language);
					if(tag.cms__Ancestor5__c != null) path += '/' + tagDefinitionToName.get(tag.cms__Ancestor5__c).get(language);
					if(tag.cms__Ancestor6__c != null) path += '/' + tagDefinitionToName.get(tag.cms__Ancestor6__c).get(language);
					path += '/' + tagDefinitionToName.get(tag.cms__Tag_Definition__c).get(language);

					attributesToInsert.add(new cms__Attribute__c(
						cms__Simple_Name__c = 'renderTagPath',
						cms__Name__c = 'renderTagPath',
						cms__Simple_Value__c = path,
						cms__Value__c = path,
						cms__Index_Key__c = content.Id + ':' + langToIdMap.get(language),
						cms__Language__c = langToIdMap.get(language),
						cms__Is_Simple__c = true,
						cms__Content__c = content.Id,
						RecordTypeId = attributeContentRecordTypeId
					));
				}
			}
		}

		delete attributesToDelete;
		insert attributesToInsert;
	}

	global void finish(Database.BatchableContext BC) {

	}
    
