    extends cms.ContentTemplateController {

    global ocms_Classifier() {
        // used by cms__ServiceEndpoint
    }


    // constructor for content editor VF page
    global ocms_Classifier(cms.CreateContentController cc) {
        super(cc);
    }


    // constructor for generator
    global ocms_Classifier(cms.GenerateContent gc) {
        super(gc);
    }


    /**
     * @description convenience function for content.cms__Published__c
     * @return Boolean - true if content version is published (and therefore cannot be edited)
     */
    public Boolean getPublished() {
        return content != null ? content.cms__Published__c : false;
    }   // getPublished



    /**
     * @description attribute classNames - required
     */
     public String classNames {
        get {
            return getProperty('classNames');
        }
        set;
    }

    /**
     * @description attribute targetSelector - required, but may be empty
     */
     public String targetSelector {
        get {
            // let's never pass a null to escapeSingleQuotes(), e.g. when Test.isRunningTest()
            return String.isBlank(getProperty('targetSelector')) ? '' : String.escapeSingleQuotes(getProperty('targetSelector'));
        }
        set;
    }

    /**
     * @description attribute classifierLabel - optional, may be null – does not affect markup, just used if the editor interface
     *              presents a pre-defined list of possible classifications
     */
     public String classifierLabel {
        get {
            return getProperty('classifierLabel');
        }
        set;
    }


   /**
     * returns script element that will cause the designated container to have the given CSS class name(s) added to it
     * @note due to OrchestraCMS’s current handling of scripts within content, this content is NOT compatible with dynamic loading
     * @function {global override string} getHTML
     * @return  String - script markup for appropriately "classifying" our target element
     */
    global override String getHTML() {
        return  '<script class="ocmsClassifier" data-class="' + classNames + '"' +
                    // remove double quotes within targetSelector so that the rarely occurring attr=["value"] becomes attr=[value]
                    (String.isNotBlank(targetSelector) ? (' data-targetselector="' + targetSelector.replaceAll('"', '') + '"') : '') + '>' +
                    'function _fDecorate() {' +
                        'var cls = $(this).data("class");' +
                        'debug.debug && debug.debug("_fDecorate:cls = " + cls);' +
                        'if (cls) {' +
                            'var targetSelector = $(this).data("targetselector"),' +
                            '    $target = targetSelector ? $(targetSelector) : $(this).parent();' +
                            'if ($target.length) {' +
                                '$target.addClass(cls);' +
                                'debug.log && debug.log("adding " + cls + " to " + $(this).parent().get(0).tagName);' +
                            '} else {' +
                                'debug.log && debug.log("couldn’t find " + targetSelector);' +
                            '}' + 
                        '}' +
                    '}' +
                    '$("script.ocmsClassifier").each(_fDecorate);' +
                '</script>';
    }   // getHTML
        
