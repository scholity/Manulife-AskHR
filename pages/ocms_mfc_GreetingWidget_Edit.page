<apex:page controller="cms.CreateContentController" extensions="ocms_mfc_GreetingWidget"
	showHeader="false" sidebar="false" cache="false" standardStylesheets="false" title="OrchestraCMS content editor">
	
	<link href="{!URLFOR($Resource.ocms_mfc_siteFiles, 'lib/css/ps.contentEditor.css')}"
		rel="stylesheet" type="text/css" class="psContentEditorCSS" />

	<apex:outputPanel layout="block">

	<script id="ocms_application_Edit">
		$(document).ready(function() {
			ce.content_editor('registerSaveFunction', function() {			   
				return [
					{type: 'text', name: 'morningGreeting', value: $('#morningGreeting').val()},
					{type: 'text', name: 'afternoonGreeting', value: $('#afternoonGreeting').val()},
					{type: 'text', name: 'eveningGreeting', value: $('#eveningGreeting').val()}
				];
			});
		});
	</script>

	<table class="ocmsContentEditor ocmsContentEditorNested">
            <tr><td>
            	<label class="ocmsLabel" for="morningGreeting" title="The morning greeting">Morning Greeting</label>
                <input type='text' id="morningGreeting" placeholder="morning greeting text" value="{!morningGreeting}"/>
			</td></tr>
            <tr><td>
            	<label class="ocmsLabel" for="afternoonGreeting" title="The afternoon greeting">Afternoon Greeting</label>
                <input type='text' id="afternoonGreeting" placeholder="afternoon greeting text" value="{!afternoonGreeting}"/>
			</td></tr>
            <tr><td>
            	<label class="ocmsLabel" for="eveningGreeting" title="The evening greeting">Evening Greeting</label>
                <input type='text' id="eveningGreeting" placeholder="evening greeting text" value="{!eveningGreeting}"/>
			</td></tr>
	</table>

	</apex:outputPanel>
	
</apex:page>
<!-- ocms_mfc_GreetingWidget_Edit.page -->