                //attributes.push({"name":"accSkipLink", "value": $('#accSkipLink').val(), "type": "Text", "simple": false});
                //attributes.push({"name":"accSkipLinkTarget", "value": $('#accSkipLinkTarget').val(), "type": "Text", "simple": false});
                attributes.push({"name":"accPopupMsg", "value": $('#accPopupMsg').val(), "type": "Text", "simple": false});
                attributes.push({"name":"accNewWindowMsg", "value": $('#accNewWindowMsg').val(), "type": "Text", "simple": false});
                attributes.push({"name":"accSameWindowMsg", "value": $('#accSameWindowMsg').val(), "type": "Text", "simple": false});

                return attributes;
            });
        });

    </script>
