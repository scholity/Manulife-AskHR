                    <td>
                        <label class="ocmsLabel" for="accPopupMsg">Popup link message</label>
                        <input class="ocmsTextInputLrg" id="accPopupMsg" name="accPopupMsg" type="text" value="{!accPopupMsg}"></input>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="ocmsLabel" for="accNewWindowMsg">Links that open in a new window message</label>
                        <input class="ocmsTextInputLrg" id="accNewWindowMsg" name="accNewWindowMsg" type="text" value="{!accNewWindowMsg}"></input>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="ocmsLabel" for="accSameWindowMsg">Links that open in the same window message</label>
