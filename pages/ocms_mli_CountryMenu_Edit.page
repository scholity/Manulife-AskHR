                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="ocmsLabel" for="accDescription">Description</label>
                        <input class="ocmsTextInputLrg" id="accDescription" name="accDescription" type="text" value="{!accDescription}"></input>
                    </td>
                </tr>
                <!-- removed as per STI-7198 -->
